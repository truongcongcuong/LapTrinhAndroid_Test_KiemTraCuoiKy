<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:padding="15dp"
    android:background="@color/bg">

    <TextView
        android:id="@+id/txt_li_name"
        android:layout_width="250dp"
        android:layout_height="39dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_li_id"
        android:layout_width="88dp"
        android:layout_height="39dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/txt_li_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_li_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_li_name" />

    <TextView
        android:id="@+id/txt_li_job"
        android:layout_width="150dp"
        android:layout_height="39dp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_li_id"
        app:layout_constraintEnd_toEndOf="@+id/txt_li_name"
        app:layout_constraintTop_toTopOf="@+id/txt_li_id" />
</androidx.constraintlayout.widget.ConstraintLayout>